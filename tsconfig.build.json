{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSources": true
  },
  "extends": "./tsconfig.json",
  "exclude": [
    "**/*.test.ts",
    "**/*.specs.ts",
    "node_modules",
    "test"
  ]
}
